<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zombies"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pro_z.activites.MainActivity" >

    <Button
        android:id="@+id/button_inizia"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:background="@drawable/inizia_selector"
         />

    <Button
        android:id="@+id/button_login"
        android:layout_width="145dp"
        android:layout_height="75dp"
        android:layout_alignLeft="@id/button_inizia"
        android:layout_alignStart="@id/button_inizia"
        android:layout_alignParentBottom="true"
        android:background="@drawable/login_selector" />

    <Button
        android:id="@+id/button1"
        android:layout_width="145dp"
        android:layout_height="75dp"
        android:layout_alignBaseline="@+id/button_login"
        android:layout_alignBottom="@+id/button_login"
        android:layout_alignRight="@+id/button_inizia"
        android:layout_alignEnd="@id/button_inizia"
        android:background="@drawable/mappa_selector" />

</RelativeLayout>
